{
    "name": "gammamatrix/playground-test",
    "description": "Playground: A test helper for Playground Laravel packages.",
    "keywords": [
        "gammamatrix",
        "laravel",
        "playground",
        "test"
    ],
    "homepage": "https://github.com/gammamatrix/playground-test/wiki",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Postlethwaite",
            "email": "jeremy.postlethwaite@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.41",
        "larastan/larastan": "^2.0",
        "orchestra/testbench": "8.*",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "10.5.*",
        "timacdonald/log-fake": "^2.0.1",
        "laravel/sanctum": "^3.3"
    },
    "suggest": {
        "gammamatrix/playground": "This package is used for testing Playground Laravel packages."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Database\\Factories\\Playground\\Test\\Models\\": "database/factories/",
            "Playground\\Test\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\Playground\\Test\\": "tests/Unit/",
            "Tests\\Feature\\Playground\\Test\\": "tests/Feature/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Playground\\Test\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse --verbose --debug --level max"
    }
}
